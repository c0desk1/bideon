---
import BaseLayout from "../layouts/BaseLayout.astro";
const blogData = Astro.locals.blogData;
const pageDescription = blogData?.description;
const ogImage = blogData?.image ?? "/bimaakbar-og-default.png";
---

<BaseLayout title="404" description={pageDescription} image={ogImage} url="https://bimaakbar.my.id/404">
  <section class="text-center mt-32">
    <h1 class="text-6xl font-bold text-[var(--color-text)] mb-4">404</h1>
    <p class="text-lg text-[var(--color-text-muted)] mb-6">Halaman tidak ditemukan, mungkin sudah dipindahkan atau dihapus.</p>
    <a href="/" class="inline-block px-6 py-3 rounded-lg bg-[var(--color-bg)] border border-[var(--color-border)] text-[var(--color-text)] font-semibold hover:border-[var(--color-accent)] transition">
      Kembali ke Beranda
    </a>
  </section>
</BaseLayout>