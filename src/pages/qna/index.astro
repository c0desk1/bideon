---
// src/pages/qna/index.astro
import Layout from '@/layouts/Layout.astro';
import QnAList from '@/components/QnAList';
import AskQuestionForm from '@/components/AskQuestionForm';

const pageTitle = 'Tanya Jawab (QnA)';
const pageDescription = 'Temukan jawaban atau ajukan pertanyaan seputar topik di blog ini.';
---

<Layout title={pageTitle} description={pageDescription}>
  <section class="container mx-auto px-4 py-16">
    <h1 class="text-3xl font-bold text-white mb-6 text-center">{pageTitle}</h1>
    <p class="text-center text-zinc-400 max-w-2xl mx-auto mb-10">{pageDescription}</p>

    <!-- Form Kirim Pertanyaan -->
    <AskQuestionForm client:only="react" />

    <!-- Daftar Pertanyaan -->
    <QnAList />
  </section>
</Layout>
