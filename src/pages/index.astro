---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero.astro";
import RecentPosts from '../components/RecentPosts.astro';
import NewsletterForm from '../components/NewsletterForm.astro';

const blogData = Astro.locals.blogData;
const pageDescription = blogData?.description;
const ogImage = blogData?.image ?? "/bimaakbar-og-default.png";
---

<BaseLayout description={pageDescription} image={ogImage} url="https://bimaakbar.my.id">
  <Hero />
  <RecentPosts />
  <NewsletterForm />
</BaseLayout>
