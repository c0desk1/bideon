---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero.astro";
import FeaturedRecentSection  from "../components/FeaturedRecentSection.astro";
import NewsletterForm from '../components/NewsletterForm.astro';
import SystemAlert from '../components/SystemAlert.astro';

const blogData = Astro.locals.blogData;
const pageDescription = blogData?.description;
const ogImage = blogData?.image ?? "/bimaakbar-og-default.png";
const recentPosts = Astro.locals.recentPosts;
---

<BaseLayout description={pageDescription} image={ogImage} url="https://bimaakbar.my.id">
<SystemAlert />
  <FeaturedRecentSection posts={recentPosts} />
  <NewsletterForm />
  <Hero />
</BaseLayout>
