---
// src/components/FeaturedPosts.astro
import type { CollectionEntry } from 'astro:content';
import FeaturedPostCard from './components/FeaturedPostCard.astro';

interface Props {
  posts: CollectionEntry<'blog'>[];
}

const { posts = [] } = Astro.props;
---

<section id="featured-posts" class="mb-20">
  <div class="max-w-7xl mx-auto px-4">
    <h2 class="heading-lg mb-6 text-center">Unggulan</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {posts.map(post => (
        <FeaturedPostCard post={post} />
      ))}
    </div>

    <div class="text-center mt-12">
      <a href="/blog" class="btn">Lihat Semua</a>
    </div>
  </div>
</section>