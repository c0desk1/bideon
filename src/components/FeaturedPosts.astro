---
// src/components/FeaturedPosts.astro
import type { CollectionEntry } from 'astro:content';
import PostCard from './PostCard.astro';

interface Props {
  posts: CollectionEntry<'blog'>[];
}
const { posts = []} = Astro.props;
---
<section id="featured-posts" class="py-20 px-6">
  <div class="max-w-7xl mx-auto">
    <div class="text-center md:text-left mb-10">
      <h2 class="text-3xl md:text-4xl font-bold">Terbaru</h2>
      <p class="mt-2 text-lg text-muted">
        Beberapa tulisan dan ide yang baru-baru ini saya eksplorasi.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {posts.map(post => (
        <PostCard post={post} />
      ))}
    </div>

    <div class="text-center mt-12">
      <a href="/blog" class="font-semibold text-oklch(70% 0.2 250) hover:underline">Lihat Semua</a>
    </div>
  </div>
</section>
