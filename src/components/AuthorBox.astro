---
// src/components/AuthorProfile.astro
interface Props {
  authorName: string;
  authorImage?: string;
  authorUrl?: string;
  authorAbout?: string;
}

const { authorName, authorImage, authorUrl, authorAbout } = Astro.props;
---

<div class="author-profile flex items-center space-x-4 py-4 border-t border-color-border mt-8">
  {authorImage && (
    <img src={authorImage} alt={authorName} class="w-12 h-12 rounded-full object-cover" loading="lazy">
  )}
  <div>
    <h4 class="font-semibold text-lg text-color-text">
      {authorUrl ? <a href={authorUrl} class="hover:underline">{authorName}</a> : authorName}
    </h4>
    {authorAbout && (
      <p class="text-sm text-color-text-muted">{authorAbout}</p>
    )}
  </div>
</div>

<style>
  .author-profile {
    /* Gaya untuk container, border-t sudah di Tailwind */
  }
</style>
