---
interface Props {
  author: {
    displayName: string;
    url: string;
    image?: {
      url: string;
    };
  };
}

const { author } = Astro.props;

const avatarUrl = author.image?.url || "https://ssl.gstatic.com/blogger-profile-default_2x.png";
---

{author && (
  <div class="flex items-center gap-4 p-4 mt-12 bg-white/5 rounded-xl border border-white/10">
    <img
      src={avatarUrl}
      alt={author.displayName}
      class="w-12 h-12 rounded-full object-cover"
      loading="lazy"
    />
    <div>
      <p class="font-semibold text-white">{author.displayName}</p>
      <a href={author.url} class="text-sm text-muted-foreground hover:text-white transition">
        Lihat Profil
      </a>
    </div>
  </div>
)}