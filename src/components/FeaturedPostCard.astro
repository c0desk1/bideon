---
import type { CollectionEntry } from 'astro:content';
import { SITE_TITLE } from '../consts';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { title, description, pubDate, heroImage, category, author } = post.data;

const formattedDate = new Date(pubDate).toLocaleDateString('id-ID', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<a href={`/blog/${post.data.slug}/`} class="group relative flex flex-col lg:flex-row rounded-xl overflow-hidden border border-border-muted bg-surface shadow-md hover:shadow-lg transition-all">

  <!-- Image kiri -->
  {heroImage && (
    <div class="lg:w-1/2 w-full max-h-96 overflow-hidden">
      <img 
        src={heroImage}
        alt={`Gambar untuk postingan ${title}`}
        class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
        loading="lazy"
      />
    </div>
  )}

  <!-- Konten kanan -->
  <div class="p-6 lg:w-1/2 flex flex-col justify-between space-y-4">
    
    <!-- Category -->
    {category && (
      <span class="text-sm uppercase font-semibold tracking-wider text-oklch(60% 0.2 250)">
        {category}
      </span>
    )}

    <!-- Title -->
    <h2 class="text-2xl font-bold leading-tight text-oklch(var(--text-oklch)) group-hover:text-oklch(70% 0.2 250)">
      {title}
    </h2>

    <!-- Deskripsi -->
    <p class="text-muted text-base leading-relaxed line-clamp-3">
      {description}
    </p>

    <!-- Footer Info -->
    <div class="flex items-center justify-between pt-2 text-sm text-muted">
      <div>
        <time datetime={pubDate.toISOString()}>{formattedDate}</time>
      </div>
      {author && (
        <div class="flex items-center gap-2">
          {author.avatar && (
            <img
              src={author.avatar}
              alt={author.name ?? SITE_TITLE}
              class="w-8 h-8 rounded-full object-cover"
              loading="lazy"
            />
          )}
          <span>{author.name ?? SITE_TITLE}</span>
        </div>
      )}
    </div>
  </div>
</a>