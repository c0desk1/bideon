---
// src/components/AboutMe.astro
import { SITE } from '@/data/site.ts';
import { Image } from 'astro:assets';

let authorName = SITE.TITLE;
let authorDescription = SITE.DESCRIPTION;
let profileImageUrl = 'https://wgcslximcxnprmfqtsoh.supabase.co/storage/v1/object/public/avatars//avatar-1750855157495.png'

---

<section id="about-me" class="container mx-auto px-4 mt-24">
    <div class="relative overflow-hidden rounded-2xl bg-zinc-800 p-8 sm:p-10 [animation:fade-in-up_0.8s_ease-out_forwards]">
        <div class="absolute -top-16 -right-16 w-72 h-72 bg-purple-500/50 rounded-full filter blur-3xl opacity-20"></div>
        <div class="absolute -bottom-16 -left-16 w-72 h-72 bg-blue-500/50 rounded-full filter blur-3xl opacity-20"></div>
        <div class="text-center">
            <div class="flex flex-col items-center gap-8 md:flex-row md:items-start md:text-left">
                <div class="flex-shrink-0 mb-4 md:mb-0">
                    <Image 
                        src={profileImageUrl} 
                        alt={authorName}
                        width="150" 
                        height="150" 
                        loading="lazy"
                        class="rounded-full object-cover w-36 h-36 border-4 border-blue-500 shadow-lg" />
                </div>
                <div class="flex-grow">
                    <h2 class="text-4xl font-bold text-white mb-3">{authorName}</h2>
                    <p class="mt-2 text-zinc-300 leading-relaxed max-w-xl mx-auto md:mx-0">{authorDescription}</p>
                </div>
            </div>
        </div>
    </div>
</section>