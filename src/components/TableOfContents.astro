---
// src/components/TableOfContents.astro
interface TocItem {
  text: string;
  id: string;
  level: number;
}

const { toc } = Astro.props as { toc: TocItem[] };
---

{toc.length > 0 && (
  <aside class="mb-10 border border-white/5 rounded-xl p-4 bg-zinc-900/50 backdrop-blur">
    <h2 class="text-lg font-bold text-white mb-3">Daftar Isi</h2>
    <ul class="space-y-2 text-sm text-zinc-400">
      {toc.map(item => (
        <li class={`ml-${(item.level - 1) * 4}`}>
          <a href={`#${item.id}`} class="hover:text-white transition-colors">
            {item.text}
          </a>
        </li>
      ))}
    </ul>
  </aside>
)}
