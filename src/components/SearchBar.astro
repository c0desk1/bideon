<!-- SearchBar.astro -->
<section>
  <div class="mb-16">
    <div class="flex justify-center">
      <form
        class="relative flex items-center w-full max-w-md"
        role="search"
        onsubmit="return false"
      >
        <input
          type="search"
          name="q"
          placeholder="Cari artikel..."
          class="form-input pl-10 pr-4 py-2 w-full rounded-md transition-all focus:shadow-md"
          aria-label="Cari artikel"
        />
        <i class="ri-search-line absolute left-3 top-1/2 -translate-y-1/2 text-muted pointer-events-none"></i>
      </form>
    </div>
  </div>
</section>
