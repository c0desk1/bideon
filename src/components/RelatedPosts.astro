---
interface RelatedPost {
  id: string;
  slug: string;
  title: string;
}

const { relatedPosts = [] }: { relatedPosts?: RelatedPost[] } = Astro.props;
---

{relatedPosts.length > 0 && (
  <section class="mt-16 max-w-3xl mx-auto">
    <h2 class="text-2xl font-bold mb-6">Artikel Terkait</h2>
    <ul class="space-y-4 list-disc list-inside">
      {relatedPosts.map(post => (
        <li>
          <a href={`/blog/${post.slug}`} class="text-blue-400 hover:underline">
            {post.title}
          </a>
        </li>
      ))}
    </ul>
  </section>
)}
