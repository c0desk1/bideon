---
interface RelatedPost {
  id: string;
  slug: string;
  title: string;
}

const { relatedPosts = [] }: { relatedPosts?: RelatedPost[] } = Astro.props;
---

{relatedPosts.length > 0 && (
  <section class="mt-16 max-w-3xl mx-auto">
    <h2 class="text-2xl font-bold mb-6 text-white">Artikel Terkait</h2>
    <ul class="grid gap-4">
      {relatedPosts.map((post) => (
        <li class="border border-white/10 rounded-lg p-4 bg-white/5 hover:bg-white/10 transition-colors">
          <a href={`/blog/${post.slug}`} class="text-white/90 hover:text-white font-medium">
            {post.title}
          </a>
        </li>
      ))}
    </ul>
  </section>
)}
