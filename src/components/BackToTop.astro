<script is:inline>
  window.addEventListener("scroll", () => {
    const button = document.querySelector("#backToTopBtn");
    if (!button) return;

    if (window.scrollY > 300) {
      button.classList.remove("opacity-0", "pointer-events-none");
    } else {
      button.classList.add("opacity-0", "pointer-events-none");
    }
  });

  function scrollToTop() {
    window.scrollTo({ top: 0, behavior: "smooth" });
  }
</script>

<button
  id="backToTopBtn"
  onclick="scrollToTop()"
  class="backtotop-button fixed bottom-6 right-6 z-50 p-3 rounded-full backdrop-blur-md shadow-lg transition-all duration-300 opacity-0 cursor-pointer"
  aria-label="Back to top"
>
  <svg
    class="w-5 h-5"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    viewBox="0 0 24 24"
  >
    <path stroke-linecap="round" stroke-linejoin="round" d="M5 15l7-7 7 7" />
  </svg>
</button>

<style>
.backtotop-button {
  background-color: var(--color-bg);
  color: var(--color-text);
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -4px rgba(0, 0, 0, 0.1);
  border: 1px solid var(--color-border);
  transition: all 0.3s ease;
}

.backtotop-button:hover {
  background-color: var(--color-card-bg);
  color: var(--color-text-hover);
}

html.light-mode .backtotop-button {
  background-color: var(--color-bg-light, var(--color-bg));
  color: var(--color-text-light, var(--color-text));
}

html.light-mode .backtotop-button:hover {
  background-color: var(--color-card-bg-light, var(--color-card-bg));
  color: var(--color-text-hover-light, var(--color-text-hover));
}
</style>