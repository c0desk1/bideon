<script is:inline>
  window.addEventListener("scroll", () => {
    const button = document.querySelector("#backToTopBtn");
    if (!button) return;

    if (window.scrollY > 300) {
      button.classList.remove("opacity-0", "pointer-events-none");
    } else {
      button.classList.add("opacity-0", "pointer-events-none");
    }
  });

  function scrollToTop() {
    window.scrollTo({ top: 0, behavior: "smooth" });
  }
</script>

<button
  id="backToTopBtn"
  onclick="scrollToTop()"
  class="fixed bottom-6 right-6 z-50 p-3 rounded-full bg-white/10 text-white/80 backdrop-blur-md shadow-lg border border-white/10 transition-all duration-300 hover:bg-white/20 hover:text-white opacity-0 pointer-events-none"
  aria-label="Back to top"
>
  <svg
    class="w-5 h-5"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    viewBox="0 0 24 24"
  >
    <path stroke-linecap="round" stroke-linejoin="round" d="M5 15l7-7 7 7" />
  </svg>
</button>
