---
// src/components/PostNavigation.astro

interface Props {
  prevPost?: any;
  nextPost?: any;
}

const { prevPost, nextPost } = Astro.props;

const basePath = '/post'; 
---

<nav class="flex flex-wrap items-center justify-between py-8 border-t border-[var(--color-border)]">
  <div class="w-1/2 pr-4 text-left">
    {prevPost && (
      <a href={`${basePath}/${prevPost.id}`} class="group transition-colors duration-200">
        <span class="text-sm text-[var(--color-text-muted)]">Previous</span>
        <h3 class="flex items-center gap-2 text-sm font-medium text-[var(--color-text)] group-hover:text-[var(--color-text-hover)]">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="transition-transform duration-200 group-hover:-translate-x-1 items-center"
          >
            <path d="m15 18-6-6 6-6"></path>
          </svg>
          {prevPost.title}
        </h3>
      </a>
    )}
  </div>

  <div class="w-1/2 pl-4 text-right">
    {nextPost && (
      <a href={`${basePath}/${nextPost.id}`} class="group inline-block transition-colors duration-200">
        <span class="text-sm text-[var(--color-text-muted)]">Next</span>
        <h3 class="flex items-center justify-end gap-2 text-sm font-medium text-[var(--color-text)] group-hover:text-[var(--color-text-hover)]">
          {nextPost.title}
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="transition-transform duration-200 group-hover:translate-x-1 items-center"
          >
            <path d="m9 18 6-6-6-6"></path>
          </svg>
        </h3>
      </a>
    )}
  </div>
</nav>