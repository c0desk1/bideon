---
// src/components/posts/PostMeta.astro
interface Props {
  authorName: string;
  authorImage?: string;
  publishedDate: string;
  readTime: string;
}

const { authorName, authorImage, publishedDate, readTime } = Astro.props;
---
<div class="flex items-center text-sm text-color-text-muted flex-wrap gap-x-3 gap-y-1 mb-2">
  {authorName && (
    <div class="flex items-center">
      {authorImage && (
        <img src={authorImage} alt={authorName} class="w-6 h-6 rounded-full mr-2 object-cover" loading="lazy" />
      )}
      <span class="text-color-text ml-1">{authorName}</span>
    </div>
  )}

  <span class="dot-separator">×</span>
  <div class="flex items-center">
    <i class="ri-calendar-line mr-1"></i> {publishedDate}
  </div>
  <span class="dot-separator">×</span>
  <div class="flex items-center">
    <i class="ri-time-line mr-1"></i> {readTime}
  </div>
</div>

<style>
  .dot-separator {
    color: var(--color-text-muted);
  }

  @media (max-width: 640px) {
    .flex-wrap {
      flex-wrap: wrap;
    }
  }
</style>
