---
// src/components/posts/PostMeta.astro
interface Props {
  authorName: string;
  authorImage?: string;
  publishedDate: string;
  readTime: string;
}

const { authorName, authorImage, publishedDate, readTime } = Astro.props;
---
<div class="flex items-center text-sm flex-wrap gap-x-3 gap-y-1 mb-2">
  {authorName && (
    <a href="/about" aria-label={`Tentang Author ${authorName}`}>
      <div class="flex items-center cursor-pointer">
        {authorImage && (
          <img
            src={authorImage}
            alt={authorName}
            width="24"
            height="24"
            class="w-6 h-6 rounded-full mr-2 object-cover"
            loading="lazy"
            decoding="async"
          />
        )}
        <span class="text-[var(--color-text)] ml-1 animated-underline">{authorName}</span>
      </div>
    </a>
  )}

  <span class="dot-separator">×</span>
  <div class="flex items-center">
    <i class="ri-calendar-line mr-1"></i> {publishedDate}
  </div>
  <span class="dot-separator">×</span>
  <div class="flex items-center">
    <i class="ri-time-line mr-1"></i> {readTime}
  </div>
</div>

<style>
  .dot-separator {
    color: var(--color-text-muted);
  }

  @media (max-width: 640px) {
    .flex-wrap {
      flex-wrap: wrap;
    }
  }
</style>