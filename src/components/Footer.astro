---
import { SITE, SOCIALS } from '../data/site.ts';


const currentYear = new Date().getFullYear();
---
<footer class="bg-zinc-900 border-t border-white/10 mt-24">
  <div class="container mx-auto px-4 py-8">
    <div class="flex flex-col items-center gap-4 sm:flex-row sm:justify-between sm:items-center">
      
      <span class="text-sm text-zinc-400 text-center sm:text-left">
        Â© {currentYear} <a href="/" class="hover:underline">{SITE.TITLE}</a>. All Rights Reserved.
      </span>

      <div class="flex flex-row justify-center mt-4 sm:mt-0">
        {SOCIALS.tiktok && (
          <a href={SOCIALS.tiktok} target="_blank" class="text-zinc-400 hover:text-white">
            <i class="ri-tiktok-fill text-xl"></i>
            <span class="sr-only">TikTok page</span>
          </a>
        )}
        {SOCIALS.instagram && (
          <a href={SOCIALS.instagram} target="_blank" class="text-zinc-400 hover:text-white ms-5">
            <i class="ri-instagram-fill text-xl"></i>
            <span class="sr-only">Instagram account</span>
          </a>
        )}
        {SOCIALS.youtube && (
          <a href={SOCIALS.youtube} target="_blank" class="text-zinc-400 hover:text-white ms-5">
            <i class="ri-youtube-fill text-xl"></i>
            <span class="sr-only">YouTube profile</span>
          </a>
        )}
      </div>
    </div>
  </div>
</footer>