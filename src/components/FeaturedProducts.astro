---
// src/components/FeaturedProducts.astro
import { products } from '@/data/products.ts';
import ProductCard from '@/components/ProductCard.tsx';

const featuredProducts = products.filter(p => p.featured).slice(0, 6);
---

<section class="bg-zinc-900 py-16">
    <div class="container mx-auto px-4">
        <div class="flex justify-between items-end mb-12">
            <div class="text-left">
                <p class="inline-block text-xs font-medium bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 text-transparent bg-clip-text uppercase tracking-wider">
                    Affiliate
                </p>
                <h2 class="text-3xl font-bold text-white leading-snug">
                    Rekomendasi Pilihan
                </h2>
                <span class="text-sm text-zinc-400 mt-1 leading-relaxed max-w-md">
                    Produk-produk yang paling sering saya gunakan dan rekomendasikan.
                </span>      
            </div>
            <a href="/rekomendasi" class="hidden sm:inline-block bg-slate-800 text-white font-semibold px-6 py-3 rounded-lg hover:bg-slate-700 transition-colors whitespace-nowrap">
                Lihat Semua
            </a>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {featuredProducts.map(product => (
            <ProductCard product={product} client:load />
          ))}
        </div>
        <div class="text-center mt-12 sm:hidden">
            <a href="/rekomendasi" class="inline-block bg-slate-800 text-white font-semibold px-8 py-3 rounded-lg hover:bg-slate-700 transition-colors">
                Lihat Semua Rekomendasi
            </a>
        </div>
    </div>
</section>