---
import { SITE_TITLE } from '../consts';
import HeaderLink from '../components/HeaderLink.astro';
---

<header class="glass-header sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between items-center h-16">

    <!-- KIRI: Logo + Judul -->
    <a href="/" class="flex items-center gap-3 group">
      <i class="ri-quill-pen-line text-2xl text-oklch(70% 0.2 250) group-hover:text-oklch(75% 0.2 250) transition-colors duration-200"></i>
      <span class="font-semibold text-lg text-oklch(var(--text-oklch)) group-hover:text-oklch(75% 0.2 250) transition-colors duration-200">
        {SITE_TITLE}
      </span>
    </a>

    <nav class="absolute left-1/2 -translate-x-1/2">
      <ul class="flex items-center gap-2 sm:gap-4">
        <li>
          <HeaderLink 
            href="/blog" 
            label="BLOG" 
            icon="" 
          />
        </li>
        <li>
          <HeaderLink 
            href="/projects" 
            label="PROJECTS" 
            icon="" 
          />
        </li>
        <li>
          <HeaderLink 
            href="/about" 
            label="TENTANG" 
            icon="" 
          />
        </li>
      </ul>
    </nav>

    <!-- KANAN: Tombol Share & Bookmark (tanpa fungsional, hanya visual) -->
    <div class="flex items-center gap-2">
      <button class="icon-btn p-2 rounded-md transition-colors" aria-label="Bagikan">
        <i class="ri-share-line"></i>
      </button>
      <button class="icon-btn p-2 rounded-md transition-colors" aria-label="Bookmark">
        <i class="ri-bookmark-line"></i>
      </button>
    </div>

  </div>
</header>

<style>
  .glass-header { 
    background: rgba(10,10,10,0.8); 
    backdrop-filter: blur(12px); 
    -webkit-backdrop-filter: blur(12px); 
    border-bottom: 1px solid rgba(255,255,255,0.1); 
  }
.icon-btn {
  color: var(--color-text);
}

.icon-btn:hover {
  color: oklch(70% 0.2 250);
  background-color: oklch(80% 0 0 / 0.08);
}

html.dark .icon-btn:hover {
  background-color: oklch(30% 0 0 / 0.15);
}
</style>
