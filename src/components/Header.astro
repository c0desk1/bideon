---
// Props: siteTitle (string)
const { siteTitle = "My Site" } = Astro.props;
---

<header class="header">
  <div class="header__inner">
    <!-- Kiri: Logo + Nama -->
    <div class="header__branding">
      <img src="/favicon.svg" alt="Logo" class="header__logo" />
      <span class="header__title">{siteTitle}</span>
    </div>

    <!-- Tengah: Navigasi (desktop only) -->
    <nav class="header__nav">
      <a href="/">Home</a>
      <a href="/project">Projects</a>
      <a href="/about">About</a>
    </nav>

    <!-- Kanan: Tombol (mobile toggle & theme) -->
    <div class="header__actions">
      <button class="header__theme-toggle" aria-label="Toggle theme">
        <i class="ri-moon-line"></i>
      </button>

      <button
        class="header__mobile-toggle"
        aria-label="Open mobile menu"
        onclick="toggleMobileMenu()"
      >
        <i class="ri-menu-line"></i>
      </button>
    </div>
  </div>

  <!-- Mobile Dropdown Navigation -->
  <nav id="mobileNav" class="header__mobile is-hidden">
    <a href="/">Home</a>
    <a href="/project">Projects</a>
    <a href="/about">About</a>

    <!-- Theme toggle khusus mobile -->
    <button class="header__theme-toggle" aria-label="Toggle theme mobile">
      <i class="ri-moon-line"></i>
    </button>
  </nav>

  <script>
    function toggleMobileMenu() {
      const nav = document.getElementById('mobileNav');
      nav.classList.toggle('is-hidden');
    }
  </script>
</header>