---
// import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import ThemeToggle from './ThemeToggle';
import SearchBar from './SearchBar.tsx';
import NotificationDropdown from './NotificationDropdown.tsx';

---

<nav class="nav-blur fixed top-0 left-0 right-0 z-10 py-4 px-6 flex items-center max-w-7xl mx-auto w-full rounded-b-xl border-t-0">
	<!-- Kiri: Judul -->
	<div class="flex-1 text-left">
	  <a href="/" class="font-semibold text-lg hover:text-oklch(70% 0.2 250) transition-colors">
		{SITE_TITLE}
	  </a>
	</div>
  
	<!-- Tengah: Ikon/logo -->
	<div class="flex-grow flex justify-center cursor-pointer">
	  <i class="ri-quill-pen-line text-2xl text-oklch(70% 0.2 250)"></i>
	</div>
  
	<!-- Kanan: Aksi -->
	<div class="flex-1 flex justify-end items-center gap-4">
	  <!-- Visitor Count -->
	  <div class="relative flex items-center gap-2 text-sm text-muted cursor-pointer group">
		<span class="relative flex h-2.5 w-2.5">
		  <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
		  <span class="relative inline-flex rounded-full h-2.5 w-2.5 bg-green-500"></span>
		</span>
		<span class="font-medium">
		  123 <span class="hidden sm:inline">pengunjung</span>
		</span>
	  </div>
  
	  <!-- Dark mode toggle -->
	  <ThemeToggle client:only="solid" />
  
	  <!-- Search -->
	  <SearchBar client:only="solid" />
  
	  <!-- Notifications -->
	  <NotificationDropdown client:only="solid" />
	</div>
  </nav>
  
  <!-- Spacer untuk fixed nav -->
  <div class="header-spacer"></div>
