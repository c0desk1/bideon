---
// src/components/AdminHeader.astro
interface Props {
  title: string;
}
const { title } = Astro.props;
---
<header class="bg-zinc-900/90 backdrop-blur-sm border-b border-zinc-700 text-white p-4 flex-shrink-0 h-[69px] w-full flex items-center">
  <div class="w-full grid grid-cols-2 items-center">

    <div class="justify-self-start flex items-center gap-4">
      <h1 class="text-xl font-bold text-white hidden sm:block">{title}</h1>
    </div>
    <div class="justify-self-end">
      <button class="bg-zinc-700 text-white font-semibold py-2 px-4 rounded-lg hover:bg-zinc-600 transition-colors text-sm flex items-center space-x-2">
        <span>Log Out</span>
      </button>
    </div>

  </div>
</header>