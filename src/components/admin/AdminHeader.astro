---
// src/components/AdminHeader.astro
interface Props {
  title: string;
}
const { title } = Astro.props;
---
<header class="bg-zinc-900/70 backdrop-blur-sm border-b border-zinc-700 text-white p-4 flex-shrink-0 h-[69px] flex items-center">
  
  <div class="w-full grid grid-cols-3 items-center">
    
    <div class="justify-self-start flex items-center gap-4">
      <button id="mobile-menu-toggle" class="lg:hidden text-zinc-300 hover:text-white">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6"><path d="M3 4H21V6H3V4ZM3 11H21V13H3V11ZM3 18H21V20H3V18Z"></path></svg>
      </button>

      {/* Judul Halaman Dinamis */}
      <h1 class="text-xl font-bold text-white hidden sm:block">{title}</h1>
    </div>

    <div class="relative justify-self-center hidden md:block">
      <input type="search" placeholder="Search..." class="bg-zinc-800 border border-zinc-700 rounded-lg py-1.5 px-3 pl-10 text-sm w-80 focus:outline-none focus:ring-2 focus:ring-blue-500">
      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4 text-zinc-400"><path d="M18.031 16.6168L22.3137 20.8995L20.8995 22.3137L16.6168 18.031C15.0769 19.263 13.124 20 11 20C6.02944 20 2 15.9706 2 11C2 6.02944 6.02944 2 11 2C15.9706 2 20 6.02944 20 11C20 13.124 19.263 15.0769 18.031 16.6168ZM16.0247 15.8748C17.2475 14.6146 18 12.8956 18 11C18 7.13401 14.866 4 11 4C7.13401 4 4 7.13401 4 11C4 14.866 7.13401 18 11 18C12.8956 18 14.6146 17.2475 15.8748 16.0247L16.0247 15.8748Z"></path></svg>
      </div>
    </div>

    <div class="justify-self-end">
      <button class="bg-zinc-700 text-white font-semibold py-2 px-4 rounded-lg hover:bg-zinc-600 transition-colors text-sm flex items-center space-x-2">
        <span>Logout</span>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4"><path d="M4 18H6V20H4V18ZM4 10H6V16H4V10ZM4 2H6V8H4V2ZM10.5858 12L7.75736 9.17157L9.17157 7.75736L12 10.5858L14.8284 7.75736L16.2426 9.17157L13.4142 12L16.2426 14.8284L14.8284 16.2426L12 13.4142L9.17157 16.2426L7.75736 14.8284L10.5858 12ZM18 2V22H20V2H18Z"></path></svg>
      </button>
    </div>

  </div>
</header>