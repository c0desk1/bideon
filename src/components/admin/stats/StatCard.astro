---
// src/components/admin/stats/StatCard.astro
import type { HTMLAttributes } from 'astro/types';

interface Props {
  title: string;
  value: string;
  iconBgColor?: string;
  as?: 'div' | 'a';
  href?: string;
}

const { 
  title, 
  value, 
  iconBgColor = 'bg-zinc-700',
  as: Element = 'div',
  href,
} = Astro.props;
---
<Element href={href} class="bg-zinc-800 rounded-lg p-4 flex items-center space-x-4">
  <div class:list={["w-12 h-12 rounded-lg flex items-center justify-center", iconBgColor]}>
    <slot /> </div>
  <div>
    <p class="text-sm text-zinc-400">{title}</p>
    <p class="text-2xl font-bold text-white">{value}</p>
  </div>
</Element>