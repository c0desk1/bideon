---
const apiUrl =
  "https://www.googleapis.com/blogger/v3/blogs/5920132421647282747/posts?key=AIzaSyAF5IX_benL0vfFXYas3BYQrenGpbl4hek";

const response = await fetch(apiUrl);
const data = await response.json();
const allPosts = data.items || [];

const posts = allPosts.map((post) => {
  const slug = post.url?.split("/").filter(Boolean).pop()?.replace(".html", "") ?? "";
  const excerpt = post.content.replace(/<[^>]*>?/gm, "").slice(0, 120);
  const isFeatured = post.labels?.includes("featured") || false;
  return {
    title: post.title,
    slug,
    excerpt,
    published: post.published,
    featured: isFeatured,
  };
});

const featuredPost = posts.find((p) => p.featured);
const recentPosts = posts.filter((p) => !p.featured);
---

<section id="konten" class="mt-20 space-y-12">
  <!-- Featured Post -->
  {featuredPost && (
    <a href={`/blog/${featuredPost.slug}`} class="block p-6 rounded-xl border border-white/10 bg-white/5 hover:bg-white/10 transition group">
      <div class="mb-2 flex items-center gap-2">
        <span class="px-2 py-0.5 text-xs font-semibold uppercase tracking-wide text-cyan-400 bg-cyan-900/30 rounded">
          Unggulan
        </span>
        <span class="text-xs text-white/50">{new Date(featuredPost.published).toLocaleDateString("id-ID")}</span>
      </div>
      <h2 class="text-2xl font-bold text-white group-hover:text-cyan-300 transition">
        {featuredPost.title}
      </h2>
      <p class="text-white/70 mt-2 line-clamp-3">{featuredPost.excerpt}</p>
    </a>
  )}

  <!-- Recent Posts -->
  <div class="space-y-6">
    {recentPosts.map((post) => (
      <a href={`/blog/${post.slug}`} class="block p-4 rounded-lg border border-white/10 bg-white/5 hover:bg-white/10 transition group">
        <div class="flex justify-between text-xs text-white/50 mb-1">
          <span>{new Date(post.published).toLocaleDateString("id-ID")}</span>
        </div>
        <h3 class="text-lg font-semibold text-white group-hover:text-cyan-300 transition">
          {post.title}
        </h3>
        <p class="text-white/60 text-sm mt-1 line-clamp-2">{post.excerpt}</p>
      </a>
    ))}
  </div>

  <!-- CTA -->
  <div class="text-center mt-8">
    <a href="/blog" class="inline-block px-6 py-2 rounded-md bg-white/10 text-white hover:bg-white/20 transition font-medium">
      Lihat Semua Postingan â†’
    </a>
  </div>
</section>