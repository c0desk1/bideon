---
// src/components/Pagination.astro
import type { Page } from 'astro';

interface Props {
  page: Page;
}
// Menerima seluruh 'page' object sebagai props
const { page } = Astro.props;
// Kita akan akses propertinya langsung dari 'page'
---
{page.lastPage > 1 && (
  <nav class="flex justify-center items-center gap-2 flex-wrap" aria-label="Navigasi Halaman">
    
    {/* Tombol Sebelumnya: Mengakses page.url.prev */}
    {page.url.prev ? (
      <a href={page.url.prev} class="px-4 py-2 bg-slate-800 text-white rounded-md hover:bg-slate-700 transition-colors text-sm font-semibold">
        ‹<span class="hidden sm:inline ml-1">Sebelumnya</span>
      </a>
    ) : (
      <span class="px-4 py-2 bg-slate-800/50 text-white/50 rounded-md text-sm font-semibold cursor-not-allowed">
        ‹<span class="hidden sm:inline ml-1">Sebelumnya</span>
      </span>
    )}

    {/* Indikator Halaman untuk Mobile */}
    <div class="sm:hidden px-4 py-2 bg-zinc-800 text-zinc-300 rounded-md text-sm font-semibold">
      {page.currentPage} / {page.lastPage}
    </div>

    {/* Tombol Berikutnya: Mengakses page.url.next */}
    {page.url.next ? (
      <a href={page.url.next} class="px-4 py-2 bg-slate-800 text-white rounded-md hover:bg-slate-700 transition-colors text-sm font-semibold">
        <span class="hidden sm:inline mr-1">Berikutnya</span>›
      </a>
    ) : (
      <span class="px-4 py-2 bg-slate-800/50 text-white/50 rounded-md text-sm font-semibold cursor-not-allowed">
        <span class="hidden sm:inline mr-1">Berikutnya</span>›
      </span>
    )}
  </nav>
)}